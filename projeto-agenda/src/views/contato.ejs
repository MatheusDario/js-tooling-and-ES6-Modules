<%- include('includes/head')%>
<%- include('includes/nav')%>

    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
          <h1 class="text-center">Contato</h1>
          <p class="text-center lead">Crie ou edite seus contatos abaixo.</p>

          <%- include('includes/messages'); %>

          <form action="/contato/register" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="mb-3">
              <label class="form-label">Nome:</label>
              <input placeholder="Digite o nome desejado" type="text" class="form-control" name="nome">
            </div>
            <div class="mb-3">
              <label class="form-label">Sobrenome:</label>
              <input placeholder="Digite o sobrenome" type="text" class="form-control" name="sobrenome">
            </div>
            <div class="mb-3">
              <label class="form-label">E-mail:</label>
              <input placeholder="Digite o email" type="email" class="form-control" name="email">
            </div>
            <div class="mb-3">
              <label class="form-label">Telefone:</label>
              <input placeholder="Digite o telefone" type="tel" class="form-control" name="telefone">
            </div>
            <button type="submit" class="btn btn-primary">Salvar</button>
          </form>
          


        </div>

        <div class="col-lg-2"></div>
      </div>
    </div>

<%- include('includes/footer')%>
    