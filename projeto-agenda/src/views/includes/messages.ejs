<% if(errors.length > 0) {  %>
<div class="row">
    <div class="col my-3">
      <div class="alert alert-danger text-center">
          <% errors.forEach(errors => { %>
            <%= errors %><br>
          <% }); %>
      </div>
    </div>
  </div>
<% } %>

<% if(success.length > 0) {  %>
    <div class="row">
        <div class="col my-3">
          <div class="alert alert-success text-center">
              <p>Usuario Criado com Sucesso</p>
          </div>
        </div>
      </div>
<% } %>

<% if(successLogin.length > 0) {  %>
    <div class="row">
        <div class="col my-3">
          <div class="alert alert-success text-center">
              <p>Login efetuado com Sucesso</p>
          </div>
        </div>
      </div>
<% } %>