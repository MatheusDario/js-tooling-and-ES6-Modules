<%- include('includes/head')%>
<%- include('includes/nav')%>

    <div class="containe">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
          <h1 class="text-center">Fazer login ou Criar conta</h1>
          <p class="text-center lead">Faça seu login ou cadastro abaixo</p>

          <div class="row">
            <div class="col-lg">
              <h4>Faça seu Login:</h4>
              <p>Se você JÁ possui conta, preencha o formulário abaixo:</p>
              <form action="/login/login" method="POST">
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="mb-3">
                  <label class="form-label">Seu e-mail</label>
                  <input placeholder="Digite seu e-mail" type="email" class="form-control" name="email">
                </div>
                <div class="mb-3">
                  <label class="form-label">Sua senha</label>
                  <input placeholder="Digite sua senha" type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-primary">Entrar</button>
              </form>
            </div>

            <div class="col-lg">
              <h4>Faça seu cadastro:</h4>
              <p>Se você NÃO possui conta, preencha o formulário abaixo:</p>
              <form action="/login/register" method="POST">
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="mb-3">
                  <label class="form-label">Seu e-mail</label>
                  <input placeholder="Digite seu e-mail" type="email" class="form-control" name="email">
                </div>
                <div class="mb-3">
                  <label class="form-label">Sua senha</label>
                  <input placeholder="Digite sua senha" type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-primary">Criar minha conta</button>
              </form>
            </div>
          </div>

          

          


        </div>

        <div class="col-lg-2"></div>
      </div>
    </div>

<%- include('includes/footer')%>
    